<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myProfileTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/notosanskrmedium"
            android:text="Profile"
            android:textColor="#573621"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personalDetailsTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="2"
                android:textColor="#573621"
                android:text="Personel Details"
                android:fontFamily="@font/kleeone"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/myProfileTextView" />


        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/ProfileCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="11dp"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="18dp"
                    android:layout_weight="3">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/profilePhotoImageView"
                        android:layout_width="91dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/food_blogger" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="26dp"
                    android:layout_weight="7"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosanskrmedium"
                        android:textColor="#70242A"
                        android:textSize="18sp"
                        tools:ignore="NestedWeights"
                        tools:text="Marvis Ighedosa" />

                    <TextView
                        android:id="@+id/mailTextView"
                        android:fontFamily="@font/notosanskrmedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#704649"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        tools:text="Dosamarvis@gmail.com" />

                    <View
                        android:layout_width="165sp"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@android:color/darker_gray" />


                    <TextView
                        android:id="@+id/phoneNumberTextView"
                        android:fontFamily="@font/notosanskrmedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#704649"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:text="+234 9011039271" />

                    <View
                        android:layout_width="165sp"
                        android:layout_height="1dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginBottom="7dp"
                        android:background="@android:color/darker_gray" />


                         </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                app:cornerRadius="10dp"
                android:backgroundTint="#FF1300"
                android:id="@+id/logOutCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textAllCaps="false"/>


        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/profileProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
</FrameLayout>